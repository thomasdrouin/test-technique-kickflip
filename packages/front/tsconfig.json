{
  "compilerOptions": {
    "target": "es2018",
    "lib": [
      "dom",
      "dom.iterable",
      "es2018"
    ],
    "types": [
      "vite/client",
      "node"
    ],
    "baseUrl": ".",
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "importHelpers": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "outDir": "dist"
  },
  "include": [
    "src/**/*",
    "deploy-scripts/**/*",
    "types/**/*"
  ],
  "exclude": [
    "**/node_modules/**"
  ]
}
